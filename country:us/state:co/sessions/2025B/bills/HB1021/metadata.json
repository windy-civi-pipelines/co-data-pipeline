  "identifier": "HB 1021",
  "title": "Retention of Vendors Fees for Collecting Sales Tax.",
  "from_organization": "~{\"classification\": \"lower\"}",
  "classification": [
    "bill"
  ],
  "subject": [
    "Business & Economic Development",
    "Fiscal Policy & Taxes"
